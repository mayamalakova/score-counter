canvas-blue = #336dc2
canvas-red = #ff2828

border-radius(val)
  -webkit-border-radius: val
  -moz-border-radius: val
  border-radius: val

right-radius(val) {
    border-bottom-right-radius: val;
    border-top-right-radius: val;
}

left-radius(val) {
    border-bottom-left-radius: val;
    border-top-left-radius: val;
}

.score-field {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-size: 65vh;
  color: aliceblue;
  align-items: center;
  justify-content: flex-end;
}

body {
  background-color: #FFF8E3;

  .container {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;;
    justify-content: center;
    align-items: center;
    user-select: none;
  }

  .score-left {
    @extend .score-field;
    background-color: canvas-blue;
    left-radius(15px);
  }

  .score-right {
    @extend .score-field 
    background-color: canvas-red;
    right-radius(15px);
  }

  .btn-minus {
    font-size: 20vh;
  }

  .serve-indicator {
    font-size: 20vh;
  }
}

.score-container {
  display: flex;
  width: 75%;
  height: 90%;
  justify-content: center;
  margin-bottom: 1.5vh;
}


.score-val{
  display: flex;
  align-self: center;
  width: 100%;
}

.score-val-number {
  flex-basis: 90%;
  text-align: center;
}

.score-group {
  line-height: 5;
}


.score-footer {
    width: 75%;
    font-size: 4vh;
    display: flex;
    justify-content: space-between;
}
.game-scores {
    display: flex;
    justify-content: space-around;
    font-size: 3vh;
}

.game-score {
    margin-right: 10px;
}

.player-name {
  text-transform: uppercase;
}

.score-summary  {
    display: flex;
    width: 100%;
}

.game-winner {
  width: 80%;
  font-size: 8vh;
  text-align: center;    
}

.button-next {
  margin-bottom: 20px;
  margin-bottom: 1.25rem;
  font-size: 16px;
  font-size: 1rem;
  line-height: 26px;
  padding: 12px 18px !important;
  background-color: #336dc2 !important;
  color: #373737 !important;
  border-width: 0 !important;
  border-style: solid !important;
  border-color: rgba(0,0,0,0) !important;
  border-radius(5px);
  font-weight: 500;
  display: inline-block;
  -webkit-font-smoothing: antialiased;
  word-break: normal;
  text-decoration: none !important;
}
